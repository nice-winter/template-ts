{
  "name": "@nice-winter/template-ts",
  "description": "A Node.js template with TypeScript and ES Module support.",
  "version": "1.0.1",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "exports": {
    ".": "./dist/index.js"
  },
  "scripts": {
    "postinstall": "node -e \"try{require('./scripts/postinstall.js')}catch(e){}\"",
    "lint": "oxlint --fix .",
    "format": "prettier --write .",
    "test": "echo \"OK\" && exit 0",
    "dev": "tsx watch --env-file=.env ./src/index.ts --nolazy",
    "start": "node --env-file=.env ./dist/index.js",
    "type-check": "tsc --noEmit",
    "build": "run-p type-check \"build-only {@}\" --",
    "build-only": "tsup"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js?(x),json,md}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "oxlint",
      "prettier --parser=typescript --write"
    ]
  },
  "author": "nice-winter",
  "repository": {
    "url": "git+https://github.com/nice-winter/template-ts.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@tsconfig/node22": "^22.0.1",
    "@types/node": "^22.15.2",
    "esbuild-fix-imports-plugin": "^1.0.19",
    "execa": "^9.5.2",
    "is-ci": "^4.1.0",
    "lint-staged": "^15.5.1",
    "npm-run-all2": "^7.0.2",
    "oxlint": "^0.16.8",
    "prettier": "^3.5.3",
    "simple-git-hooks": "^2.13.0",
    "tslib": "^2.8.1",
    "tsup": "^8.4.0",
    "tsx": "^4.19.3",
    "typescript": "~5.8.3"
  }
}
