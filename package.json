{
  "name": "@nice-winter/template-ts",
  "description": "A Node.js template with TypeScript and ES Module support.",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "exports": {
    "import": "./dist/index.js"
  },
  "scripts": {
    "lint": "eslint --fix --ext .ts ./src",
    "format": "prettier --write .",
    "test": "echo \"OK\" && exit 0",
    "dev": "dotenvx run -- tsx watch ./src/index.ts --nolazy",
    "start": "dotenvx run -- node ./dist/index.js",
    "build": "tsup",
    "postinstall": "node ./scripts/postinstall.js"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js?(x),json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "eslint",
      "prettier --parser=typescript --write"
    ]
  },
  "author": "nice-winter",
  "repository": {
    "url": "git+https://github.com/nice-winter/template-ts.git"
  },
  "license": "MIT",
  "dependencies": {
    "@dotenvx/dotenvx": "^1.39.1",
    "is-ci": "^4.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@tsconfig/node22": "^22.0.1",
    "@types/node": "^22.14.0",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.1",
    "execa": "^9.5.2",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "simple-git-hooks": "^2.12.1",
    "tslib": "^2.8.1",
    "tsup": "^8.4.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.29.1"
  }
}
