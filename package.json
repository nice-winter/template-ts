{
  "name": "@nice-winter/template-ts",
  "description": "A Node.js template with TypeScript and ES Module support.",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "exports": {
    "import": "./dist/index.js"
  },
  "scripts": {
    "lint": "",
    "format": "prettier --write .",
    "test": "echo \"OK\" && exit 0",
    "dev": "dotenvx run -- tsx watch ./src/index.ts --nolazy",
    "start": "dotenvx run -- node ./dist/index.js",
    "build": "dotenvx run -- tsup",
    "postinstall": "dotenvx run -- node ./scripts/postinstall.js"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js?(x),json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "author": "nice-winter",
  "repository": {
    "url": "git+https://github.com/nice-winter/template-ts.git"
  },
  "license": "MIT",
  "dependencies": {
    "@dotenvx/dotenvx": "^1.39.1"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.1",
    "@types/node": "^22.14.0",
    "esbuild-fix-imports-plugin": "^1.0.19",
    "execa": "^9.5.2",
    "is-ci": "^4.1.0",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "simple-git-hooks": "^2.12.1",
    "tslib": "^2.8.1",
    "tsup": "^8.4.0",
    "tsx": "^4.19.3",
    "typescript": "~5.8.3"
  }
}
